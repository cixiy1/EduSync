<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<TabPane maxHeight="800" maxWidth="400" minHeight="800" minWidth="400" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="top.xiaosuoaa.edusync.client.ActivityEvent">
    <Tab text="首页">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <StackPane prefHeight="770.0" prefWidth="400.0">
                <Label text="EduSync 客户端控制面板" StackPane.alignment="TOP_CENTER" />
                <VBox alignment="CENTER" maxHeight="714.0" prefWidth="400.0">
                    <Button cache="true" cacheHint="SPEED" contentDisplay="BOTTOM" onAction="#onUploadStatusButtonClick" text="上传状态">
                        <font>
                            <Font size="32.0" />
                        </font>
                  <VBox.margin>
                     <Insets bottom="20.0" />
                  </VBox.margin>
                    </Button>
                    <HBox maxHeight="100" maxWidth="350" style="-fx-padding: 15; -fx-background-color: #aaccff;">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                        <VBox prefHeight="70.0" prefWidth="192.0">
                            <Label text="Mac地址（设备ID）">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <Label fx:id="macList" text="Null">
                                <font>
                                    <Font size="16.0" />
                                </font>
                            </Label>
                        </VBox>
                        <VBox alignment="TOP_RIGHT" prefHeight="70.0" prefWidth="188.0">
                            <Label text="当前版本">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <Label text="1.0">
                                <font>
                                    <Font size="16.0" />
                                </font>
                            </Label>
                        </VBox>
                    </HBox>
                    <ScrollPane prefHeight="200.0" prefWidth="200.0">
                        <VBox fx:id="logger" prefHeight="200.0" prefWidth="384.0">
                            <Label text="日志">
                        <font>
                           <Font size="16.0" />
                        </font></Label>
                        </VBox>
                    </ScrollPane>
                </VBox>
            </StackPane>
        </AnchorPane>
    </Tab>
</TabPane>
